{% extends 'CantigaCoreBundle:layout:base-layout.html.twig' %}

{% block page_title %}
	{{ 'Milestones' | trans([], 'pages') }}
{% endblock %}

{% block page_subtitle %}
	{{ 'Manage the milestones for groups and areas' | trans([], 'pages') }}
{% endblock %}

{% block page_content %}
<div class="row">
	<div class="col-xs-12">
		<div class="box box-primary">
			{{ form_start(form) }}
			<div class="box-header with-border">
				<i class="fa fa-flag-checkered"></i>
				<h3 class="box-title">{{ 'Edit milestone: 0' | trans([item.name], 'pages') }}</h3>
			</div>
			<div class="box-body">
				<div class="row">
					<div class="col-lg-6 col-xs-12">
						{{ form_row(form.name) }}
					</div>
					<div class="col-lg-6 col-xs-12">
						{{ form_row(form.description) }}
					</div>
					<div class="col-lg-6 col-xs-12">
						{{ form_row(form.displayOrder) }}
					</div>
					<div class="col-lg-6 col-xs-12">
						{{ form_row(form.deadline) }}
					</div>
				</div>
			</div>
			<div class="box-footer">
				{{ form_widget(form.save) }}
			</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>
{% endblock %}
